{
	"type": "composer-plugin",
	"name": "imarc/opus",
	"description": "Multi-framework asset and module packaging for composer",
	"keywords": ["package management"],
	"license": "MIT",
	"authors": [
		{
			"name": "Matthew J. Sahagian",
			"email": "matt@imarc.net",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=7.4.0",
		"jfcherng/php-diff": "^6.0",
		"composer-plugin-api": "^2.0"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.0",
		"phpunit/phpunit": "^10.0",
		"composer/composer": "^2.0"
	},
	"autoload": {
		"classmap": [
			"src"
		]
	},
	"extra": {
		"class": "Opus\\Processor"
	}
}
